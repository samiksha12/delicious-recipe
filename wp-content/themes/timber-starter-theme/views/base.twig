{% block html_head_container %}

	{% include 'html-header.twig' %}
	{% block head %}{% endblock %}
</head>{% endblock %}<body class="{{body_class}}" data-template="base.twig">
{{ function('wp_body_open') }}
<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>

<header id="header" class="header">
	{% block header %}
		<div class="wrapper">
			<nav id="nav-main" class="main_nav" role="navigation">
				<div class="logo">
					<a class="hdr-logo-link" href="{{site.url}}" rel="home"><img src="{{logo[0].thumbnail.src}}"></a>
				</div>
				<div class="nav_container">
					{% include "menu.twig" with {'items': menu.get_items} %}
				</div>
			</nav>
			<!-- #nav -->
		</div>

	{% endblock %}
</header>
{% if fn('is_front_page') %}
	{% block front_image %}
		<div class="main_image">
			<img class="first_image" src="{{post.thumbnail.src}}" alt="main iamge"/>
			<div class="main_caption">
				{{ post.content }}
			</div>
		</div>
		<div class="sub_image">
			{% include "featured-post.twig" with {'imagepost': featured} %}
		</div>
	{% endblock %}
{% endif %}
{% if not fn('is_front_page') %}
	<section id="content" role="main" class="content-wrapper">
		{% if title %}
			<h1>{{title}}</h1>
		{% endif %}
		<div class="wrapper">
			{% block content %}
				Sorry, no content
			{% endblock %}
		</div>
		{% if sidebar %}
			<aside class="layout-sidebar">
				{{sidebar}}
			</aside>
		{% endif %}
	</section>
{% endif %}

{% if fn('is_front_page') %}
	<section class="category_section">
		<div class="categories">
			<h2>Most Popular Categories</h2>
			<div class="categories_subhead">Be sure not to miss out the recipes of these most popular categories. Enjoy
							                trying them out!</div>
			<div class="image_category d-flex justify-content-center flex-wrap">
				{% include "front-category.twig" with {'category': categories } %}
			</div>
		</div>
	</section>
{% endif %}
{% block footer %}
	<footer id="footer">
		{% include 'footer.twig' %}
	</footer>
	{{ function('wp_footer') }}
{% endblock %}
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script></body></html>
